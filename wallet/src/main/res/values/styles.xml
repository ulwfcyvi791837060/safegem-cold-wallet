<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="My.Theme.NoTitleDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="CommonDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--水波纹-->
    <style name="ripple_style">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!--一级标题-->
    <style name="title_text_style">
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--可点击item-->
    <style name="common_item_style" parent="ripple_style">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingTop">@dimen/dimen_14dp</item>
        <item name="android:paddingBottom">@dimen/dimen_14dp</item>
    </style>

    <!--通用button-->
    <style name="public_button_style">
        <item name="android:layout_height">@dimen/dimen_44dp</item>
    </style>

    <style name="public_circle_button_style" parent="public_button_style">
        <item name="android:background">@drawable/public_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="public_right_button_style" parent="public_button_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--白色button-->
    <style name="public_white_button_style" parent="public_button_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--白色button-->
    <style name="public_gray_button_style" parent="public_button_style">
        <item name="android:background">@color/public_gray</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
