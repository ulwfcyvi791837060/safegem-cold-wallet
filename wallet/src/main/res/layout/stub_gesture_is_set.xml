<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_gesture_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/bt_change_gesture"
        android:layout_width="match_parent"
        style="@style/public_circle_button_style"
        android:layout_margin="@dimen/dimen_40dp"
        android:text="@string/change_gesture"/>
</LinearLayout>