<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_view_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/public_background" />

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_fingerprint_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/public_background" />

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_language_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/public_background" />

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_date_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/public_background" />

    <com.bankledger.safecold.ui.widget.CommonTextWidget
        android:id="@+id/ctw_vol_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>