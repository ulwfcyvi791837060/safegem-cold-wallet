<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:textColor="@color/colorPrimaryDark" />

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/plv_gesture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:aspectRatio="square"
        app:aspectRatioEnabled="true"
        app:correctStateColor="@color/colorPrimaryDark"
        app:dotAnimationDuration="200"
        app:dotCount="3"
        app:dotNormalSize="@dimen/dimen_12dp"
        app:dotSelectedSize="@dimen/dimen_24dp"
        app:normalStateColor="@color/colorPrimary"
        app:pathEndAnimationDuration="100"
        app:pathWidth="@dimen/dimen_4dp"
        app:wrongStateColor="@color/pomegranate" />
</LinearLayout>