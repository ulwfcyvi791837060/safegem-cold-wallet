<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/dimen_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="@dimen/dimen_28dp"
            android:layout_height="@dimen/dimen_28dp"
            android:background="@drawable/step_round_shape"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_alias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="6"
            android:gravity="top"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|top"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_refresh_balance"
            android:layout_width="@dimen/dimen_54dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:background="@drawable/public_button_shape"
            android:gravity="center"
            android:text="@string/sync"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
