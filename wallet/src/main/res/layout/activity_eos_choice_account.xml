<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_12dp">

        <com.bankledger.safecold.ui.widget.AutoSplitTextView
            android:id="@+id/tv_common_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_12dp"
            android:text="如果您有EOS账户，点击“导入”；如果您当前还没有EOS账户，点击创建新的EOS账户，是由安宝免费为你创建。"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dimen_12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_17sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:text="暂无账号"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_import"
            style="@style/public_right_button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="导入" />

        <Button
            android:id="@+id/bt_create"
            style="@style/public_white_button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="新建" />

    </LinearLayout>
</LinearLayout>
