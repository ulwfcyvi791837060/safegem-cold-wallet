<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_12dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@color/line" />

    <com.bankledger.safecold.ui.widget.CommonEditWidget
        android:id="@+id/cew_alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:background="@color/line" />

    <ImageView
        android:id="@+id/iv_qr_address"
        android:layout_width="@dimen/dimen_180dp"
        android:layout_height="@dimen/dimen_180dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_resend"
            style="@style/public_circle_button_style"
            android:layout_width="@dimen/dimen_110dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/resend" />

        <Button
            android:id="@+id/bt_delete_contact"
            style="@style/public_circle_button_style"
            android:layout_width="@dimen/dimen_110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_22dp"
            android:text="@string/delete_contact" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>